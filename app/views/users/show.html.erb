

<div class="user-wrapper">
<div class="user-">
  <div class="user-info">
    <div class="user-profile">
      <%= image_tag @user.image_url, class:"icon_image"%>
    </div>
    <div class="user-button">
      <h3><%= @user.username %></h3>
    </div>
  </div>
  <div class="user-follow">
    <% if user_signed_in? && @user == current_user %>
            <%= link_to "プロフィール編集",  edit_user_registration_path(current_user), class: "btn btn-info edit" %>
          <% else %>
            <%= render 'relationships/follow_button', user: @user %> 
          <% end %>
  </div>
</div>
<div class="user-post">   
      <% @post.each do |t| %><br>
          <%= link_to post_path(t.id),class: "posts_day_link" do %>
            <div class="posts_day">
              <span class="posts_day_txt"><%= t.day.strftime('%Y/%m/%d') %></span>
            </div>
          <% end%>
      <% end %>
</div>

